{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,   
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./node_modules", "./lib", "./coverage"]
}
